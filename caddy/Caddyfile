{
    # Global caddy configuration for logging
    log global-caddy {
        output file /var/log/caddy/global.log { # You can also set domain specific log config under site block for access logs.
            roll_keep_days 60
        }
        format json
        level INFO
    }
}

{$DOMAIN} {
    encode gzip

    header {
        -Server
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        X-Content-Type-Options "nosniff"
    }

    handle /api/* {
        reverse_proxy {$API_HOSTNAME}:5000
    }

    handle {
        file_server
        root * /var/www

        # If there is a 404, serve index.html (required for React)
        try_files {path} index.html
    }
}
